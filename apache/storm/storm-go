#!/usr/bin/env bash
set -e



declare -a Daemons=( \
        'dev-zookeeper'
        'drpc'
        'logviewer'
        'nimbus'
        'pacemaker'
        'supervisor'
        'ui'
        )
declare -a DaemonJpsNames=( \
        'dev_zookeeper'
        'drpc'
        'logviewer'
        'nimbus'
        'pacemaker'
        'supervisor'
        'core'
        )
declare -a Running
declare -a Selections
readonly JpsOut="$(jps)"



function isRunning() {
    echo "$JpsOut" | grep ${DaemonJpsNames[$i]} &>/dev/null \
        && return 0 \
        || return 1
}



function findOutWhatsRunning() {
    for i in $(seq 0 $(( ${#DaemonJpsNames[@]} - 1 )))
    do
        if isRunning "$i"
        then
            Running[$i]='(Running)'
        else
            Running[$i]=''
        fi
    done
}



function refreshSelections() {
    for i in $(seq 0 $(( ${#Daemons[@]} - 1 )))
    do
        Selections[$i]="${Daemons[$i]}${Running[$i]}${Selected[$i]}"
    done
}



function selectIdx() {
    if [[ -n "${Selected[$1]}" ]]
    then
        Selected[$1]=''
    else
        Selected[$1]='âœ”'
    fi
}



function selectRunning() {
    for i in $(seq 0 $(( ${#Daemons[@]} - 1)))
    do
        if isRunning "$i"
        then
            selectIdx "$i"
        fi
    done
}



function selectAll() {
    for i in $(seq 0 $(( ${#Daemons[@]} - 1)))
    do
        selectIdx "$i"
    done
}



function launchDaemon() {
    local readonly Daemon="$1"
    local readonly LogDir='storm-go-logs'

    mkdir -p "$LogDir"

    echo "Starting $Daemon"
    ( bin/storm "$Daemon" \
         2>"$LogDir/$Daemon.err" \
         >"$LogDir/$Daemon.out" ) &
}



function applySelections() {
    for i in $(seq 0 $(( ${#Daemons[@]} - 1)))
    do
        if [[ -n "${Selected[$i]}" ]]
        then
            if [[ '(Running)' == "${Running[$i]}" ]]
            then
                local readonly pids="$(echo "$JpsOut" \
                    | grep ${DaemonJpsNames[$i]} \
                    | sed 's; .*;;')"
                for pid in $pids
                do
                    echo "Killing ${Daemons[$i]} pid $pid"
                    kill "$pid"
                done
            else
                launchDaemon ${Daemons[$i]}
            fi
        fi
    done
}



# main



if [[ ! -x 'bin/storm' ]]
then
    echo 'Could not find executable bin/storm' >&2
    exit 1
fi

findOutWhatsRunning

PS3='
#? '
while :
do
    refreshSelections
    echo
    echo 'Select deamons whose state to toggle, then APPLY'
    select Selection in ${Selections[@]} 'Toggle Running' 'Toggle All' 'APPLY'
    do
        case "$REPLY" in
            [1-${#Daemons[@]}])
                idx="$(( REPLY - 1 ))"
                selectIdx "$idx"
                break;;
            $(( ${#Daemons[@]} + 1)))
                selectRunning
                break;;
            $(( ${#Daemons[@]} + 2)))
                selectAll
                break;;
            $(( ${#Daemons[@]} + 3)))
                applySelections
                exit 0;;
            *) ;;
        esac
    done
    test -z "$REPLY" && exit 1
done
